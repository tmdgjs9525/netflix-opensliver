<Page
    x:Class="netflix_opensliver.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:RegionManager="clr-namespace:netflix_opensliver.Core.Region;assembly=netflix_opensliver.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:netflix_opensliver"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Foreground="{DynamicResource Theme_TextBrush}"
    mc:Ignorable="d">

    <Grid Background="{DynamicResource Theme_BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="32,32,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="23"
            Text="Hello, World!" />

        <TransitioningContentControl Grid.Row="1" RegionManager:RegionManager.RegionName="MainRegion" />
    </Grid>
</Page>
